# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[*.bat]
indent_style = tab
end_of_line = crlf

[LICENSE]
insert_final_newline = false

[Makefile]
indent_style = tab

[*.mk]
indent_style = tab

[*.{yaml,yml}]
indent_size = 2

[*.ini]
indent_size = 4

[*.json]
indent_size = 2


[*.txt]
indent_size = 4
trim_trailing_whitespace = false


[*.md]
indent_size = 2
max_line_length = 80
trim_trailing_whitespace = false
